<div class="containar">
  <div class="row w-75 mx-auto">
    <h2 class="col-12">プロフィール編集</h2>

    <!--エラーメッセージ-->
    <%= render 'layouts/errors', obj: @user %>

    <div class="col-12">
      <%= form_with model: @user do |f| %>
        <!--プロフィール画像-->
        <div>
          <label for="inputImage" class="col-md-3">プロフィール画像：</label>
          <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*", class:"col-md-8 pl-0" %>
        </div>

        <!--ユーザーネーム-->
        <div>
          <label for="inputName" class="col-md-3">ユーザー名：</label>
          <%= f.text_field :name, id:"inputName", placeholder:"ユーザー名", class:"col-md-3" %>
        </div>

        <!--自己紹介-->
        <div>
          <label for="inputIntroduction" class="col-md-3 align-top">自己紹介：</label>
          <%= f.text_area :introduction, id:"inputIntroduction", placeholder:"200字以内", rows:"3", class:"col-md-8" %>
        </div>

        <%= f.submit "変更を保存", class:"mt-3" %>
      <% end %>
    </div>
  </div>
</div>